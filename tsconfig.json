{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "types": [
      "node"
    ],
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true
  }
}